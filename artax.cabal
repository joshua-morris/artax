common warnings
    ghc-options: -Wall

executable artax
    import:           warnings
    main-is:          Main.hs
    include-dirs:     shaders
    other-modules:    Artax.Shader,
                      Artax.Texture,
                      Artax.Program,
                      Artax.Uniform
    build-depends:    base ^>=4.15.1.0,
                      sdl2,
                      gl,
                      JuicyPixels,
                      vector,
                      dear-imgui,
                      linear,
                      StateVar
    hs-source-dirs:   src
    default-language: Haskell2010
